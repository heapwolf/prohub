section.project

  header
    h1
      a.org(href='/home') Orgname
      span.projectname / Projectname

  != summarybar

  .button-group
    input.ss-icon.add(type="button" value="plus", title="Add Repo")
    input.ss-icon.refresh(type="button" value="sync", title="Fetch Github Data")

  ul.unstyled.tabs
    li
      input#tab0(type='radio', name='tabs', checked='')
      label(for='tab0') Repos
      #tab-content0.tab-content
    
        ul.unstyled.repos

    li
      input#tab1(type='radio', name='tabs')
      label(for='tab1') Issues By Milestone
      #tab-content1.tab-content

        .datebar-container
          .datebar
            .progress

        #milestonesChart.chart

        div.text-center
          p Grey bar indicates a date timeline from the beginning of the project to the end of the project. The Blue bar is the progress of total milestones closed towards completion.

    li
      input#tab2(type='radio', name='tabs')
      label(for='tab2') Contributions
      #tab-content2.tab-content

        #contributionsChart.chart

        .contributors

.modal
  .modal-content
    div
      p Please specify the url to the github repository that you would like to include.
      input.repo-name(type="text", placeholder="https://github.com/name/project")
      .response
        p 
      .button-group
        input.button.modal-close(type="button", value="Close")
        input.button.modal-ok(type="button", value="ok")

.modal-overlay

.loading
  h2 Loading Github data...
  .loader
    .progress
  .loaded

